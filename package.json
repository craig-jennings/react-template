{
  "name": "react-template",
  "description": "React Template",
  "version": "0.1.0",
  "author": "Craig Jennings",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "build:watch": "webpack --mode development --watch",
    "clean": "rimraf dist",
    "serve": "live-server dist/ --entry-file=index.html --no-browser",
    "start": "webpack-dev-server",
    "test": "npm-run-all test:eslint test:jest test:e2e",
    "test:ci": "npm-run-all test:ci:*",
    "test:ci:chrome": "testcafe chrome:headless ./e2e/**/*.spec.js --app \"yarn serve\"",
    "test:ci:firefox": "testcafe firefox:headless ./e2e/**/*.spec.js --app \"yarn serve\"",
    "test:e2e": "testcafe chrome ./e2e/**/*.spec.js --app \"yarn serve\"",
    "test:eslint": "eslint src/ e2e/ --quiet",
    "test:jest": "jest"
  },
  "dependencies": {
    "@reduxjs/toolkit": "1.4.0",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-redux": "7.2.1",
    "react-router-dom": "5.2.0",
    "react-spring": "8.0.27",
    "styled-components": "5.1.1",
    "workbox-window": "4.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.1",
    "@testing-library/react": "^10.0.2",
    "babel-jest": "^26.0.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "babel-plugin-styled-components": "^1.10.6",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "copy-webpack-plugin": "^6.0.0",
    "eslint": "^7.0.0",
    "eslint-config-airbnb": "^18.0.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-import-resolver-jest": "^3.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "html-webpack-plugin": "^4.0.4",
    "husky": "^4.2.3",
    "jest": "^26.0.0",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.3",
    "prettier": "^2.0.2",
    "react-refresh": "^0.8.3",
    "rimraf": "^3.0.0",
    "style-loader": "^1.0.0",
    "testcafe": "^1.1.1",
    "webpack": "^4.8.3",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.8.0",
    "workbox-webpack-plugin": "^4.2.0"
  }
}
